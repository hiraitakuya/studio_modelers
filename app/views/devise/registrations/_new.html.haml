#signUpModal.modal.fade
  .modal-dialog.modal-lg
    .modal-content
      .modal-header.pt-2.pb-1.bg-primary.text-white
        .modal-title.mx-auto
          %h5 Sign Up
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span.text-white Ã—
      .modal-body.mx-auto
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .form-group.row
            = f.label :name
            %br/
            = f.text_field :name, autofocus: true, class: "form-control"
          %br/
          .form-group.row
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", size: "30", class: "form-control"
          %br/
          .form-group.row
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off", size: "30", class: "form-control"
          %br/
          .form-group.row
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off", size: "30", class: "form-control"
          %br/
          = f.submit "Sign up", class: 'btn btn-outline-primary row'