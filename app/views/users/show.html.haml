.bg-light.pt-5
  .container.pt-5
    .row.py-5
      .col-md-6
        -if current_user.avatar.present?
          = image_tag current_user.avatar.to_s, alt: '',width: "160", height: "160", class: 'rounded-circle mx-auto d-block'
        - else
          = image_tag 'user_icon.jpg', alt: '',width: "160", height: "160", class: 'rounded-circle mx-auto d-block'

      .col-md-6
        %h5.font-italic 
          Name
        %p.mb-5.ml-1
          = @user.name
        %h5.font-italic
          Email
        %p.mb-5.ml-1
          = @user.email
        %h5.font-italic
          Profile
        %p.mb-5.ml-1
          = @user.profile

.container
  .row  
    - @products.each do |product|
      = render 'products/product', product: product