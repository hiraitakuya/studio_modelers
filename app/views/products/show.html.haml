.container.container-m
  .row
    .col-md-6
      = image_tag @product.photos.first.image_url.url, alt: '', class: 'img-fluid', id: 'userProductModal'
    .col-md-6
      %h2.mb-4
        = @product.title
      %p 
        = @product.text

  .row
    - if user_signed_in? && current_user.id == @product.user.id
      .MainContainer__EditDelete--edit
        = link_to '編集', edit_product_path(@product)
      .MainContainer__EditDelete--delete
        = link_to '削除', product_path(@product), method: :delete
